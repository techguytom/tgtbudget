{# AppBundle/Resources/views/Transaction/transaction.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}
    <h2>Transaction List</h2>
    <div class="row">
        <div class="col-md-6">
            <h3>Filter Transaction View</h3>
            {{ form_start(filterForm, {'style': 'inline'}) }}
            {{ form_widget(filterForm) }}
            {{ form_end(filterForm) }}
            <a href="{{ path('transaction') }}" title="Clear Filter">clear filter</a>
        </div>
        <div class="col-md-6">
            <h3>Select an Account to Reconcile</h3>
            {{ form_start(reconcileForm, {'style': 'inline'}) }}
            {{ form_row(reconcileForm.type) }}
            {{ form_row(reconcileForm.filter, { 'label': 'Reconcile' }) }}
            {{ form_end(reconcileForm) }}
        </div>
    </div>
    <table class="table table-striped table-bordered table-responsive">
        <thead>
            <tr>
                <th>Date</th>
                <th>Payee</th>
                <th>Account</th>
                <th>Category</th>
                <th>Amount</th>
                <th>Reconciled</th>
            </tr>
        </thead>
        {% for transaction in transactions %}
            <tr>
                <td>
                    {{ transaction.date|date('m/d/Y') }}
                </td>
                <td>
                    {% if transaction.name %}
                        {{ transaction.name }}
                    {% else %}
                        {{ transaction.bill.name }}
                    {% endif %}
                </td>
                <td>
                    {{ transaction.account.name }}
                </td>
                <td>
                    {% if transaction.category %}
                        {{ transaction.category.name }}
                    {% elseif transaction.bill %}
                        {{ transaction.bill.category.name }}
                    {% endif %}
                </td>
                <td>
                    {{ transaction.transactionAmount|money_localized_format }}
                </td>
                <td>
                    {% if (transaction.reconciled == true) %}
                        {{ icon('check-square-o') }}
                    {% else %}
                        {{ icon('minus-square-o') }}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
