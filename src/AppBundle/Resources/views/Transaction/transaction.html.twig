{# AppBundle/Resources/views/Transaction/transaction.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}
    <h2>Transaction List</h2>
    {{ form_start(form, {'style': 'inline'}) }}
    <a href="{{ path('transaction') }}" title="Clear Filter">clear filter</a>
    {{ form_widget(form) }}
    {{ form_end(form) }}
    {{ form_start(reconcileForm) }}
    <table class="table table-striped table-bordered table-responsive">
        <thead>
            <tr>
                <th>Date</th>
                <th>Payee</th>
                <th>Account</th>
                <th>Category</th>
                <th>Amount</th>
                <th>Reconcile</th>
            </tr>
        </thead>
        {% for transaction in transactions %}
            <tr>
                <td>
                    {{ transaction.date|date('m/d/Y') }}
                </td>
                <td>
                    {% if transaction.name %}
                        {{ transaction.name }}
                    {% else %}
                        {{ transaction.bill.name }}
                    {% endif %}
                </td>
                <td>
                    {{ transaction.account.name }}
                </td>
                <td>
                    {% if transaction.category %}
                        {{ transaction.category.name }}
                    {% elseif transaction.bill %}
                        {{ transaction.bill.category.name }}
                    {% endif %}
                </td>
                <td>
                    {{ transaction.transactionAmount|money_localized_format }}
                </td>
                <td>
                    {% if (transaction.reconciled == true) %}
                        {{ form_widget(reconcileForm.reconcile[transaction.id], {'attr': {'checked': 'checked'}}) }}
                    {% else %}
                        {{ form_widget(reconcileForm.reconcile[transaction.id]) }}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </table>
    {{ form_end(reconcileForm) }}
{% endblock %}
