{# AppBundle:Action/type.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}
    <h1>Account Types Configuration</h1>
    {{ form_start(form, {'style': 'horizontal'}) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
    <h2>Account Types</h2>
    <table class="table table-striped table-bordered table-responsive">
        <thead>
            <tr>
                <th>Account Types</th>
            </tr>
        </thead>
        {% for account in accountTypes %}
            <tr>
                <td>{{ account.name }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
